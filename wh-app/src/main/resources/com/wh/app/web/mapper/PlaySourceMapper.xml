<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.coship.cap.video.live.mapper.PlaySourceMapper">
	
   <resultMap type="PlaySourceEntity" id="resultMap">
        <result property="id" column="id"/>
        <result property="channelName" column="channelName"/>
		<result property="sourceName" column="sourceName"/>
		<result property="sourceUrl" column="sourceUrl"/>
    </resultMap>

		
	<sql id="select_columns">
		t.id, t.channelName, t.sourceName,  t.sourceUrl
    </sql>
	
	<insert id="save" parameterType="PlaySourceEntity" 
		useGeneratedKeys="true" keyProperty="id">
		 <![CDATA[
			 INSERT INTO t_live_play_source(
				channelName,sourceName, sourceUrl , createTime ,lastUpdateTime
			 )VALUES(
			 	#{channelName},#{sourceName}, #{sourceUrl}, #{createTime},#{lastUpdateTime}
			 )
		 ]]>
	</insert>
	
    <update id="update" parameterType="PlaySourceEntity" flushCache="true">
        UPDATE t_live_play_source t
        <set>
	      	<if test="id!= null" >t.id=#{id},</if>
			<if test="sourceName!= null" >t.sourceName=#{sourceName},</if>
			<if test="sourceUrl!= null" >t.sourceUrl=#{sourceUrl},</if>   
		</set> 
		WHERE id = #{id}
 	</update>
	
	<!-- 主键删除 -->
	<delete id="deleteOne" flushCache="true" parameterType="Long">
		DELETE FROM t_live_play_source WHERE id = #{id}
	</delete>

	
	
	<!-- 多行删除 -->
     <delete id="deleteMulti"  parameterType="List">
   		delete from t_live_play_source 
   		<where>
			<if test="list != null and list != ''">
				 id in 
				<foreach collection="list" item="key" open=" ( " close=" ) " separator=",">
					#{key}
				</foreach>
			</if>
		</where>
   </delete>
   

	<!-- 对象查询 -->
	<select id="findOne" resultMap="resultMap" parameterType="Long">
		SELECT 
		<include refid="select_columns"/>
		FROM t_live_play_source t
		WHERE t.id = #{id}
	</select>

	<!-- list分页查询 -->
	<select id="selectList" resultMap="resultMap" parameterType="java.util.Map">
		SELECT 
		<include refid="select_columns"/>
		FROM t_live_play_source t
		<include refid="select_where_sql"/>
	</select>

	<!-- 查询字段  -->
	<sql id="select_where_sql">
		<where>
			<if test=" id!=null and id!='' ">
				AND t.id = #{id}
			</if>
			<if test=" areaCode!= null and areaCode!='' ">
				AND t.sourceName = #{sourceName}
			</if>	
			<if test="sourceUrl!= null" >
			    AND t.sourceUrl=#{sourceUrl}
			</if>
			
			<if test="lastUpdateTime!= null" >
			    AND t.lastUpdateTime > #{lastUpdateTime}
			</if>
		</where>
	</sql>
	
	<!-- 分页查询 -->	
	<select id="getPageList" resultMap="resultMap" parameterType="java.util.Map">
		SELECT 
		<include refid="select_columns"/>
		FROM t_live_play_source t
		<include refid="page_where_sql"/>
	</select>
  
  	<!-- 查询字段  -->
	<sql id="page_where_sql">
		<where>
			<if test=" id!=null and id!=''">
				AND t.id = #{id}
			</if>
			<if test=" sourceName!= null and sourceName!='' ">
				AND t.sourceName = #{sourceName}
			</if>	
			<if test=" sourceUrl!= null and sourceUrl!='' ">
				AND t.sourceUrl=#{sourceUrl}
			</if>
			<if test="lastUpdateTime!= null" >
			    AND t.lastUpdateTime > #{lastUpdateTime}
			</if>
		</where>
	</sql>

</mapper>
